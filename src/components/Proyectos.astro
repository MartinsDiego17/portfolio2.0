---
import { Button } from "@nextui-org/react";
import { projects } from "../data/projects";
import "@fortawesome/fontawesome-free/css/all.css";
---

<div class="mb-[45vh] max-sm:w-[90%] max-sm:mx-auto">
    <h2 id="titleSection">
        <i class="fa-solid fa-diagram-project opacity-50"></i> Proyectos recientes
    </h2>
    <ul>
        {
            projects.map((project) => (
                <li class="w-[75%] mx-auto mb-[5%] flex max-sm:block max-sm:mb-[15vh]">
                    <article class="w-1/2 max-sm:w-[100%] ">
                        <img
                            class="w-full h-[40vh] max-sm:h-[20vh] rounded-2xl"
                            src={project.image.src}
                            alt={project.title}
                        />
                    </article>

                    <article class="w-1/2 max-sm:w-[100%] max-sm:mt-[4%] pl-[3%] max-sm:pl-0">
                        <h2 class="text-[1.4rem] text-[#ddd]">
                            {project.title}
                        </h2>
                        <ul class="flex justify-start mt-[2%] max-sm:mt-[4%] max-sm:mb-[4%]">
                            {project.stack.map((hab) => (
                                <p
                                    class={`mr-[2%] rounded-md opacity-80 text-[.8rem] py-[.7%] px-[3%] text-black ${hab}`}
                                >
                                    {hab}
                                </p>
                            ))}
                        </ul>
                        <p class="mt-[2%] text-balance text-[#ccc]">
                            {project.description}
                        </p>
                            <a href={project.github} target="_blank">
                            <Button
                                className="mt-[2%] opacity-100 text-[#8ed2ff] max-sm:mt-[5%]"
                                color="primary"
                                variant="flat"
                                client:visible
                            >
                                <i class="fa-brands fa-github" /> CÃ³digo
                            </Button>
                        </a>
                        {project.deploy && (
                                <a href={project.deploy} target="_blank">
                                <Button
                                    className="mt-[2%] opacity-100 text-[#8ed2ff] max-sm:mt-[5%]"
                                    color="primary"
                                    variant="flat"
                                    client:visible
                                >
                                    <i class="fa-solid fa-link" /> Demo
                                </Button>
                            </a>
                        )}
                    </article>
                </li>
            ))
        }
    </ul>
</div>

<style>
    .Javascript {
        background-color: #eacc25;
        color: black;
    }
    .Next {
        background-color: black;
        color: white;
    }
    .React {
        background-color: #09f;
        color: white;
    }
    .Vite {
        background-color: #d511e8;
        color: white;
    }
</style>
