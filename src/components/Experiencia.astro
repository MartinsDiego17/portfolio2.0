---
interface Experiencia {
    name: string;
    date: string;
    title: string;
    description: string;
    habilities: string[];
    type: string;
    link: string;
}
import { getI18N } from "../lenguajes";
const { currentLocale }: any = Astro;
const i18n = getI18N({ currentLocale });

interface PropsExperience {
    title: string;
    FirstExperience: Experiencia
    SecondExperience: Experiencia
    ThirdExperience: Experiencia
}
interface I18N {
    Experience: PropsExperience;
}
const i18nTyped = i18n as I18N;
const { Experience } = i18nTyped;
const experiencias = [
    Experience.FirstExperience,
    Experience.SecondExperience,
    Experience.ThirdExperience,
];

import Card from "./experiencia/Card";
---

<div
    class="h-fit mb-[45vh] max-sm:mb-[20vh] w-[70%] max-sm:w-[80%] mx-auto flex flex-col justify-center align-middle"
>
    <h2 class="titleSection">
        <i class="fa-solid fa-briefcase opacity-50"></i> { Experience.title }
    </h2>
    <ol>
        {
            experiencias.map((experience: Experiencia) => (
                <li>
                    <Card {...experience} />
                </li>
            ))
        }
    </ol>
</div>

<style is:global>
    .titleSection {
        font-size: 1.8rem;
        font-weight: 700;
        color: #eee;
        text-align: center;
        margin-bottom: 20px;
    }

    @media (min-width: 1536px) {
        .titleSection {
            font-size: 2.5rem;
        }
    }

    .cardContainer {
        background: linear-gradient(
            to right top,
            rgba(14, 14, 14, 0.75),
            rgba(34, 34, 34, 0.75)
        );
        position: relative;
        backdrop-filter: blur(5px);
        font-family: "onest";
        box-shadow: 0px 0px 5px inset #444;
    }

    .cardContainer:hover {
        background: linear-gradient(
            to right top,
            rgba(14, 14, 14, 0.75),
            rgba(36, 36, 36, 0.75)
        );
    }

    .cardContainer::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        filter: blur(100px);
    }
    .cardContainer .hab {
        box-shadow: 0px 0px 2px inset #333;
    }
</style>
